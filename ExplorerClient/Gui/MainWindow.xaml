<Window x:Class="ExplorerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ExplorerClient.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Button x:Name="SendMessage" Content="Send message" HorizontalAlignment="Left" Margin="19,114,0,0" VerticalAlignment="Top" Width="154"
                Command="{Binding SayHello}"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="23" Margin="228,115,0,0" TextWrapping="Wrap" Text="{Binding StringMessage}" VerticalAlignment="Top" Width="212"/>

    </Grid>
</Window>
